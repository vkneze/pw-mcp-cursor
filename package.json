{
  "name": "pw-tests-automation-practice",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:nightly": "playwright test --grep @nightly",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "allure:generate": "mkdir -p allure-history && (cp -r allure-report/history allure-history/ 2>/dev/null || true) && allure generate allure-results --clean -o allure-report && (cp -r allure-history/history allure-report/ 2>/dev/null || true)",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:serve-report": "cd allure-report && python3 -m http.server 8080",
    "allure:clean": "rm -rf allure-results allure-report allure-history"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/mcp": "^0.0.41",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "playwright": "^1.56.0"
  }
}
